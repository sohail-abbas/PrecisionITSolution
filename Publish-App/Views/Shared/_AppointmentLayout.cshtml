<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">

    <title>@ViewBag.Title</title>
    <link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="/Content/theme-2/css/bootstrap.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/theme-2/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="/Content/theme-2/css/style.css" rel="stylesheet">
    <link href="/Content/theme-2/css/style-responsive.css" rel="stylesheet">

</head>
<body>
    <div id="login-page">
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <div aria-hidden="true" aria-labelledby="loadingModal" role="dialog" tabindex="-1" id="loadingModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="hide close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Loading.....</h4>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default hide" type="button">Close</button>
                </div>
            </div>
        </div>
    </div>
    <a data-toggle="modal" href="login.html#loadingModal" class="hide" id="loadingMessage"> Loading</a>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/theme-2/js/jquery.js"></script>
    <script src="/Content/theme-2/js/bootstrap.min.js"></script>
    <!--BACKSTRETCH-->
    <!-- You can use an image of whatever size. This script will stretch to fit in any screen size.-->
    <script type="text/javascript" src="/Content/theme-2/js/jquery.backstretch.min.js"></script>
    <script>
        $.backstretch("/Content/theme-2/img/login-bg.jpg", { speed: 500 });
    </script>
    <script src="~/Content/js/jquery.validate.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
